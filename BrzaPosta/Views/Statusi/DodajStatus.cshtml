@using BrzaPosta.Web.ViewModels

@model StatusiDodajVM

<h2>Dodaj status</h2>

<form asp-action="Snimi">
    <input asp-for="@Model.Status.DostavaId" hidden />
    <div class="form-group">
        <label>Status</label>
        <select asp-for="@Model.Status.StatusDostave" asp-items="Html.GetEnumSelectList<BrzaPosta.Web.Helper.Enums.Status>()"></select>
    </div>
    <div class="form-group">
        <label>Opis</label>
        <input asp-for="@Model.Status.Opis" style="width: 400px" />
    </div>
    <button type="submit" class="btn btn-success">Dodaj</button>
</form>

