
@model DostaveZavrsiVM


<div style="padding:40px 10px; position:center;">
    <form asp-action="ZavrsiSnimiDostavu">

        <input asp-for="DatumStatusa" hidden />
        <input asp-for="DostavaId" hidden />

        <div class="form-group" style="width:60%;">
            <label class="control-label">Status dostave</label>
            <select asp-for="status" asp-items="@Html.GetEnumSelectList(typeof(BrzaPosta.Web.Helper.Enums.Status))" class="form-control"></select>
        </div>

        <div class="form-group" style="width:60%;">
            <label class="control-label">Opis</label>
            <input asp-for="Opis" class="form-control" />
        </div>

        <button type="submit" class="btn btn-outline-primary"><i class="fas fa-save"></i> Snimi</button>

    </form>
</div>

